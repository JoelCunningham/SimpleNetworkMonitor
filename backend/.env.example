# Environment configuration template
# Copy this file to .env and update the values

# Flask configuration
DEBUG=true
TESTING=false

# Database configuration
DATABASE_URL=sqlite:///network_monitor.db
SQLALCHEMY_TRACK_MODIFICATIONS=false
SQLALCHEMY_ECHO=true

# Background scan configuration
SCAN_CHECK_INTERVAL_S=10
BACKGROUND_SCAN_INTERVAL_S=60
BACKGROUND_FULL_SCAN_INTERVAL_S=300

# Network configuration
SUBNET=192.168.0
MIN_SCAN_IP=1
MAX_SCAN_IP=254
MAX_THREADS=254
PING_COUNT=3

# Timeout configuration
PING_TIMEOUT_MS=2000
ARP_TIMEOUT_MS=1000
HOSTNAME_TIMEOUT_MS=1000
PORT_SCAN_TIMEOUT_MS=1000
SERVICE_DETECTION_TIMEOUT_MS=2000
DISCOVERY_TIMEOUT_MS=3000

# === Environment-specific examples ===

# For development:
# DEBUG=true
# SQLALCHEMY_ECHO=true

# For production:
# DEBUG=false
# SQLALCHEMY_ECHO=false

# For testing:
# TESTING=true
# DATABASE_URL=sqlite:///:memory:
